---
import { type ProjectSchema } from "../content/config";
import BaseLayout from "./BaseLayout.astro";
import dayjs from "dayjs";
import localizedFormat from "dayjs/plugin/localizedFormat";

export interface Props extends ProjectSchema {}

const { title, description, updatedDate, heroImage, badge, custom_link, custom_link_label } = Astro.props;
dayjs.extend(localizedFormat);
---

<BaseLayout title={title} description={description} image={heroImage} sideBarActiveItemID="projects">
  <main class="md:flex md:justify-center">
    <article class="prose prose-lg max-w-[750px] prose-img:mx-auto">
      {heroImage && <img src={heroImage} alt={title} class="w-full mb-6" />}
      <h1 class="title my-2 text-4xl font-bold">{title}</h1>
      {updatedDate && <time>{dayjs(updatedDate).format("MMM DD, YYYY")}</time>}
      <br />
      {badge && <div class="badge badge-secondary my-1">{badge}</div>}
      {
        custom_link && custom_link !== "#" && (
          <a href={custom_link} target="_blank" class="btn btn-outline ml-5">
            {custom_link_label}
          </a>
        )
      }
      <div class="divider my-2"></div>
      <slot />
    </article>
  </main>
</BaseLayout>
