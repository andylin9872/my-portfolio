---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="Brain Aging Simulation & Optical Modeling"
    img="/my-portfolio/aged_project.png"
    desc="Engineered a dynamic 3D brain optical model to simulate physiological aging and predict optical signal loss."
    url="/my-portfolio/projects/brain-aging"
    badge="MATLAB"
    target="_self"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="EIT-Based Muscle Motion Analysis System"
    img="/my-portfolio/EIT_project.png"
    desc="Built a custom EIT hardware system with signal reconstruction pipelines for real-time visualization of muscle contraction."
    url="/my-portfolio/projects/eit-muscle-motion"
    badge="Hardware"
    target="_self"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Portable Multimodal Cardiac Screening System"
    img="/my-portfolio/cardiac_project.png"
    desc="Designed a low-power wearable with on-device CNN inference for real-time cardiac abnormality detection."
    url="/my-portfolio/projects/cardiac-screening"
    badge="Edge AI"
    target="_self"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Interactive Star Trail Visualization Tool"
    img="/my-portfolio/street_project.png"
    desc="Developed a browser extension integrating Google Street View to visualize astronomical data with field of view overlays."
    url="/my-portfolio/projects/star-trail-tool"
    badge="Web"
    target="_self"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Ongoing Projects</div>
  </div>

  <HorizontalCard
    title="Offline UAV Visual Navigation Control System"
    img="/my-portfolio/black_placeholder.png"
    desc="Designed a GPS-independent offline UAV control architecture using image comparison (Map Matching) for positioning and navigation."
    url="/my-portfolio/projects/offline-uav"
    badge="Ongoing"
    target="_self"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="iOS Long Exposure Photography App"
    img="/my-portfolio/black_placeholder.png"
    desc="Designed and developed an iOS camera app using computational photography to simulate long exposure effects by stacking multiple short-exposure photos."
    url="/my-portfolio/projects/ios-long-exposure"
    badge="Ongoing"
    target="_self"
  />
</BaseLayout>
