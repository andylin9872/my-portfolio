---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Gallery" sideBarActiveItemID="gallery">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Gallery</div>
  </div>

  <div class="mb-10 text-justify">
    Here you can find my latest photography works and videos. I love capturing moments and sharing stories through my lens.
  </div>

  <div class="text-2xl w-full font-bold mb-5">YouTube Channel</div>

  <HorizontalCard
    title="Star Lin Photos on YouTube"
    img="/channel.jpg"
    desc="Check out my videos on my YouTube channel @starlinphotos."
    url="https://youtube.com/@starlinphotos?si=b0W-_uAfdMyvCOH6"
    badge="Video"
    target="_blank"
  />

  <div class="divider my-0"></div>

  <div class="text-2xl w-full font-bold mb-5 mt-10">Photography (Instagram)</div>

  <HorizontalCard
    title="Star Lin Photos on Instagram"
    img="/instagram_photo.jpg"
    desc="Follow my photography journey on Instagram @star_lin_photos."
    url="https://www.instagram.com/star_lin_photos?igsh=MTc0cHNmcDVqMnkxMw%3D%3D&utm_source=qr"
    badge="Photo"
    target="_blank"
  />

</BaseLayout>
